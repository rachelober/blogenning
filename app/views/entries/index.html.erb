<h1>Listing Your Entries</h1>

<table>
  <tr>
	  <th>Round</th>
    <th>Name &amp; URL</th>
		<th>Timestamp</th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
		<td><%=h entry.round.id %></td>
    <td><%= link_to entry.name, entry.url %></td>
    <td><%=h entry.created_at.to_s(:posted_on) %></td>
    <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
    <td><%= link_to 'Destroy', entry, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New entry', new_entry_path %>