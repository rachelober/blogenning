<h1>Login</h1>
<% form_tag 'login/login' do -%>
<p>
	<b>E-mail</b><br>
	<%= text_field_tag 'email', nil, { :size => 20, :maxlength => 50 } %>
</p>
<p>
	<b>Password</b><br>
	<%= password_field_tag 'password', nil, { :size => 15, :maxlength => 15 } %>
</p>
<p>
	<%= submit_tag "Log In" %>
</p>
<% end -%>
<p>
	<%= link_to "Forgot Password?", password_login_path %> | <%= link_to "Register Account", register_login_path %>
</p>